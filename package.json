{
  "name": "what-a-vue",
  "description": "Let's get baking!",
  "version": "0.1.0",
  "author": "Caleb Jacob <hello@calebjacob.com>",
  "license": "BSD-2-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/iamceege/what-a-vue"
  },
  "engines": {
    "node": "^8.0.0",
    "npm": "^5.0.0"
  },
  "dependencies": {
    "ajv": "^5.2.2",
    "body-parser": "^1.17.2",
    "compression": "^1.6.2",
    "css-loader": "^0.28.4",
    "express": "^4.15.3",
    "file-loader": "^0.9.0",
    "nib": "^1.1.2",
    "onchange": "^3.2.1",
    "parallelshell": "^2.0.0",
    "proxyquire": "^1.8.0",
    "stylus": "^0.54.5",
    "swig-templates": "^2.0.2",
    "uglify-js": "^3.0.24",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "vee-validate": "^2.0.0-rc.18",
    "vue": "^2.4.4",
    "vue-loader": "^12.1.0",
    "vue-router": "^2.7.0",
    "vue-template-compiler": "^2.3.3",
    "webpack": "^3.6.0"
  },
  "devDependencies": {
    "avoriaz": "^2.4.3",
    "chai": "^3.5.0",
    "concurrently": "^3.3.0",
    "inject-loader": "^3.0.0",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-webpack": "^2.0.4",
    "mocha": "^3.2.0",
    "node-mocks-http": "^1.5.0",
    "nodemon": "^1.9.0",
    "sinon": "^2.3.5",
    "sinon-stub-promise": "^4.0.0"
  },
  "scripts": {
    "build:develop": "npm run clean && npm run css:develop && npm run js:develop",
    "build:production": "npm run clean && npm run css:production && npm run js:production",
    "clean": "rm -rf app/public/dist && mkdir app/public/dist",
    "css:develop": "stylus --use nib app/ui/styles/main.styl --out app/public/dist/styles-$npm_package_version.css",
    "css:production": "stylus --compress --use nib app/ui/styles/main.styl --out app/public/dist/styles-$npm_package_version.css",
    "css:watch": "onchange 'app/ui/styles/' -- npm run css:develop",
    "env": "env",
    "js:develop": "webpack --config webpack.develop.config.js",
    "js:production": "webpack --config webpack.production.config.js",
    "js:watch": "onchange 'app/ui/js/' 'webpack.base.config.js' 'webpack.develop.config.js' -- npm run js:develop",
    "start": "npm run start:develop",
    "start:develop": "npm run build:develop && concurrently 'npm run css:watch' 'npm run js:watch' 'npm run nodemon'",
    "start:production": "npm run build:production && NODE_ENV='production' node app/index.js",
    "nodemon": "nodemon --ext js,swig,json --ignore app/ui/js/ --ignore app/public/dist/*.js app/index.js",
    "nodemon:help": "nodemon -h",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "mocha 'app/test.backend.shim.js' 'app/index-test.js' 'app/node_modules/**/*-test.js'",
    "test:backend:watch": "onchange 'app/index.js' 'app/node_modules/' 'app/tests/' --no-exclude --initial -- npm run test:backend --loglevel=silent",
    "test:frontend": "karma start --single-run",
    "test:frontend:watch": "karma start"
  }
}
